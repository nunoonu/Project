<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_all_routes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nu.myapplication.Activities.AllRoutesActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightSeaGreen"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_route"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
        <TextView
            android:layout_width="wrap_content"
            android:text="ROUTE"
            android:textColor="@color/Azure"
            android:layout_gravity="center"
            android:textSize="20dp"

            android:id="@+id/route_toolbar_title"
            android:layout_height="wrap_content" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/back_button_route"
            android:text=""
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/LightSeaGreen"
            fancy:fb_focusColor="@color/DarkCyan"
            fancy:fb_fontIconResource="&#xf053;"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="50dp"
            fancy:fb_fontIconSize = "20dp"
            fancy:fb_textColor="@color/Azure" />


    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/YellowGreen"
        android:layout_alignParentStart="true"
        android:id="@+id/scroolview_route"
        android:layout_below="@+id/toolbar_route">
        <TableLayout
            android:id="@+id/table_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
        </TableLayout>

    </ScrollView>

</RelativeLayout>

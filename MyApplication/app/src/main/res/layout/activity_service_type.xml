<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_service_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.nu.myapplication.Activities.ServiceTypeActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_servicetype"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <TextView
        android:layout_width="wrap_content"
        android:text="Service Type"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:id="@+id/service_type_toolbar_title"
        android:layout_height="wrap_content" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/back_button_service_type"
            android:text=""
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="left"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/DarkTurquoise"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_fontIconResource="&#xf053;"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="50dp"
            fancy:fb_fontIconSize = "20dp"
            fancy:fb_textColor="@color/DeepPink" />

    </android.support.v7.widget.Toolbar>

    <RadioGroup
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toolbar_servicetype"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/radioGroup">
        <RadioButton android:id="@+id/radio_to_school"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_blue_light"
            android:text="To School"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_to_home"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="To Home"
            android:buttonTint="@android:color/holo_blue_light"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_both"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Both"
            android:buttonTint="@android:color/holo_blue_light"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_none"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="None"
            android:buttonTint="@android:color/holo_blue_light"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/button2"
        android:text=""
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/radioGroup"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/DarkTurquoise"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_fontIconResource="&#xf058;"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="1000dp"
        fancy:fb_fontIconSize = "47dp"
        fancy:fb_textColor="#FFFFFF" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backblue">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="337dp"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="@+id/password"
        app:layout_constraintRight_toRightOf="@+id/password"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="Support system for school bus"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="0dp"
        android:id="@+id/textView"
        android:textColor="@color/white"
        tools:textColor="@color/white"
        tools:textStyle="bold"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="36sp"
        android:layout_marginTop="60dp" />

    <EditText
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@color/colorAccent"
        android:id="@+id/email"
        android:ellipsize="middle"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_width="352dp" />

    <EditText
        android:layout_width="352dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintLeft_toLeftOf="@+id/email"
        app:layout_constraintRight_toRightOf="@+id/email"
        android:layout_height="0dp"
        android:layout_marginTop="8dp" />

    <Button
        android:text="LOGIN"
        android:layout_width="352dp"
        android:layout_height="0dp"
        android:id="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        app:layout_constraintLeft_toLeftOf="@+id/editText2"
        app:layout_constraintRight_toRightOf="@+id/editText2"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="NEED AN ACCOUNT?"
        android:layout_height="0dp"
        android:id="@+id/needaccount"
        android:layout_width="352dp"
        android:gravity="center"
        android:textColor="@color/com_facebook_button_border_color_focused"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintLeft_toLeftOf="@+id/login_button"
        app:layout_constraintRight_toRightOf="@+id/login_button"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Sign Up Now"
        android:layout_height="48dp"
        android:id="@+id/signup"
        android:layout_width="200dp"
        app:layout_constraintTop_toBottomOf="@+id/needaccount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp" />


</android.support.constraint.ConstraintLayout>
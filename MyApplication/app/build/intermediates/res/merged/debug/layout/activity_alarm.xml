<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nu.myapplication.Activities.AlarmActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_alarm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1">

        <TextView
            android:layout_width="wrap_content"
            android:text="Alarm"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:id="@+id/alarm_toolbar_title"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="36sp"

        android:layout_marginStart="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_alarm" />

    <TextView
        android:text="Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="36sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />


    <Button
        android:text="30 mins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button25"
        app:layout_constraintTop_toTopOf="@+id/button9"
        app:layout_constraintBottom_toBottomOf="@+id/button9"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button28"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:layout_constraintLeft_toLeftOf="@+id/button9"
        app:layout_constraintRight_toRightOf="@+id/button9" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button29"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button28"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/button28"
        app:layout_constraintBottom_toBottomOf="@+id/button28"
        app:layout_constraintRight_toRightOf="@+id/button25"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button30"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/button28"
        app:layout_constraintLeft_toLeftOf="@+id/button28"
        app:layout_constraintRight_toRightOf="@+id/button28"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button31"
        app:layout_constraintTop_toTopOf="@+id/button30"
        app:layout_constraintBottom_toBottomOf="@+id/button30"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="@+id/button29"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button30"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button32"
        app:layout_constraintLeft_toLeftOf="@+id/button30"
        app:layout_constraintRight_toRightOf="@+id/button30"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/button30"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button33"
        app:layout_constraintTop_toTopOf="@+id/button32"
        app:layout_constraintBottom_toBottomOf="@+id/button32"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button32"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="@+id/button31"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.nu.myapplication.Activities.ChildActivity">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_child"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
        <TextView
            android:layout_width="wrap_content"
            android:text="Child"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:id="@+id/child_toolbar_title"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_child"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
         <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
             android:stretchColumns="*"
            android:layout_gravity = "center_horizontal"
            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

             <TableRow
                 android:background="#607D8B"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="60px"
                 android:id="@+id/nameRow"
                 android:padding="5dp">

                     <TextView
                         android:id="@+id/namet"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left"
                         android:text="Name : "
                         android:background="#FFFF4444"/>

                     <TextView
                         android:id="@+id/name"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/namet"

                         android:background="#FF0099CC"
                         />


                 <TextView
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="right"
                     android:text="API Level"

                     android:background="#222D8B"/>
             </TableRow>

             <TableRow
                 android:background="#607D8B"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="60px"
                 android:id="@+id/telRow"
                 android:padding="5dp">

                     <TextView
                         android:id="@+id/telt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left"
                         android:text="Tel : "
                         android:background="#FFFF4444"/>

                     <TextView
                         android:id="@+id/tel"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/telt"
                         android:text="aaaaaaaaaaaaaaaaaa"
                         android:background="#FF0099CC"
                         />

             </TableRow>

             <TableRow
                 android:background="#607D8B"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="60px"
                 android:id="@+id/addressRow"
                 android:padding="5dp">

                     <TextView
                         android:id="@+id/addresst"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left"
                         android:text="Address : "
                         android:background="#FFFF4444"/>

                     <TextView
                         android:id="@+id/address"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/addresst"
                         android:text="aaaaaaaaaaaaaaaaaa"
                         android:background="#FF0099CC"
                         />

             </TableRow>

             <TableRow
                 android:background="#607D8B"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="60px"
                 android:id="@+id/classTeacherRow"
                 android:padding="5dp">

                     <TextView
                         android:id="@+id/classteachert"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left"
                         android:text="Class Teacher : "
                         android:background="#FFFF4444"/>

                     <TextView
                         android:id="@+id/classteacher"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/classteachert"
                         android:text="aaaaaaaaaaaaaaaaaa"
                         android:background="#FF0099CC"
                         />

             </TableRow>

             <TableRow
                 android:background="#607D8B"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="60px"
                 android:id="@+id/classTelRow"
                 android:padding="5dp">

                     <TextView
                         android:id="@+id/classtelt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left"
                         android:text="Class Teacher Tel : "
                         android:background="#FFFF4444"/>

                     <TextView
                         android:id="@+id/classtel"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/classtelt"
                         android:text="aaaaaaaaaaaaaaaaaa"
                         android:background="#FF0099CC"
                         />

             </TableRow>

             <TableRow
                 android:background="#607D8B"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="60px"
                 android:id="@+id/isInBusRow"
                 android:padding="5dp">

                     <TextView
                         android:id="@+id/isinbust"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left"
                         android:text="Is in bus? : "
                         android:background="#FFFF4444"/>

                     <TextView
                         android:id="@+id/isinbus"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/isinbust"
                         android:text="aaaaaaaaaaaaaaaaaa"
                         android:background="#FF0099CC"
                         />

             </TableRow>

             <TableRow
                 android:background="#607D8B"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="60px"
                 android:id="@+id/serviceRow"
                 android:padding="5dp">

                     <TextView
                         android:id="@+id/servicet"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left"
                         android:text="Service Type? : "
                         android:background="#FFFF4444"/>

                     <TextView
                         android:id="@+id/service"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/servicet"
                         android:text="aaaaaaaaaaaaaaaaaa"
                         android:background="#FF0099CC"
                         />

             </TableRow>

             <TableRow
                 android:background="#607D8B"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="60px"
                 android:id="@+id/aboutBusRow"
                 android:padding="5dp">
                 <RelativeLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content">
                     <TextView
                         android:id="@+id/aboutbus"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left"
                         android:text="About bus"
                         android:background="#FFFF4444"/>


                 </RelativeLayout>
             </TableRow>



          </TableLayout>
    </ScrollView>
</RelativeLayout>

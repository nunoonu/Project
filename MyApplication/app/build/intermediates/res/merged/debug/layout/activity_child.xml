<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.nu.myapplication.Activities.ChildActivity">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightSeaGreen"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_child"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
        <TextView
            android:layout_width="wrap_content"
            android:text="Child"
            android:textColor="@color/Azure"
            android:layout_gravity="center"
            android:textSize="20dp"

            android:id="@+id/child_toolbar_title"
            android:layout_height="wrap_content" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/back_button_child"
            android:text=""
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/LightSeaGreen"
            fancy:fb_focusColor="@color/DarkCyan"
            fancy:fb_fontIconResource="&#xf053;"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="50dp"
            fancy:fb_fontIconSize = "20dp"
            fancy:fb_textColor="@color/Azure" />


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_child"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
         <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
             android:stretchColumns="*"
            android:layout_gravity = "center_horizontal"
            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

             <TableRow
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="75dp"

                 android:id="@+id/nameRow"
                 android:padding="5dp">

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/namet"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left|center_vertical"
                         android:text="Name : " />

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/name"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/namet"
                        android:layout_gravity="center_vertical" />


                 <TextView
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="right"
                     android:text="API Level"

                     android:background="#222D8B"/>
             </TableRow>

             <TableRow
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="75dp"
                 android:id="@+id/telRow"
                 android:padding="5dp">

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/telt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left|center_vertical"
                         android:text="Tel : " />

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/tel"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/telt"
                         android:layout_gravity="center_vertical"
                         android:text="aaaaaaaaaaaaaaaaaa"/>

             </TableRow>

             <TableRow
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="75dp"
                 android:id="@+id/addressRow"
                 android:padding="5dp">

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/addresst"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left|center_vertical"
                         android:text="Address : " />

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/address"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/addresst"
                         android:text="aaaaaaaaaaaaaaaaaa"
                         android:layout_gravity="center_vertical"/>

             </TableRow>

             <TableRow
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="75dp"
                 android:id="@+id/classTeacherRow"
                 android:padding="5dp">

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/classteachert"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left|center_vertical"
                         android:text="Class Teacher : " />

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/classteacher"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/classteachert"
                         android:text="aaaaaaaaaaaaaaaaaa"
                         android:layout_gravity="center_vertical"/>

             </TableRow>

             <TableRow
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="75dp"
                 android:id="@+id/classTelRow"
                 android:padding="5dp">

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/classtelt"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left|center_vertical"
                         android:text="Class Teacher Tel : " />

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/classtel"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/classtelt"
                         android:text="aaaaaaaaaaaaaaaaaa" />

             </TableRow>

             <TableRow
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="75dp"
                 android:id="@+id/isInBusRow"
                 android:padding="5dp">

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/isinbust"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left|center_vertical"
                         android:text="Is in bus? : "
                     />

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/isinbus"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/isinbust"
                         android:layout_gravity="center_vertical"
                         android:text="aaaaaaaaaaaaaaaaaa" />

             </TableRow>

             <TableRow
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="75dp"
                 android:id="@+id/serviceRow"
                 android:padding="5dp">

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/servicet"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left|center_vertical"
                         android:text="Service Type? : " />

                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/service"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:maxLines="1"
                         android:layout_toRightOf="@+id/servicet"
                         android:layout_gravity="center_vertical"
                         android:text="aaaaaaaaaaaaaaaaaa" />

             </TableRow>

             <TableRow
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:minHeight="75dp"
                 android:id="@+id/aboutBusRow"
                 android:padding="5dp">
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"

                     android:gravity="center_vertical">
                     <com.example.nu.myapplication.Utils.CustomTextView
                         android:id="@+id/aboutbus"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_gravity="left"
                         android:gravity="center_vertical"
                         android:text="About bus" />


                 </RelativeLayout>
             </TableRow>



          </TableLayout>
    </ScrollView>
</RelativeLayout>
